{
  "name": "@guizmo-ai/zai-cli",
  "version": "0.3.8",
  "description": "An open-source AI agent that brings the power of Z.ai GLM models directly into your terminal.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "zai": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "build:bun": "bun run tsc",
    "dev": "bun run src/index.ts",
    "dev:node": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:bun": "bun run dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "install:bun": "bun install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "keywords": [
    "cli",
    "agent",
    "text-editor",
    "zai",
    "glm",
    "ai"
  ],
  "author": "Guizmo AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guizmo-ai/zai-glm-cli.git"
  },
  "bugs": {
    "url": "https://github.com/guizmo-ai/zai-glm-cli/issues"
  },
  "homepage": "https://github.com/guizmo-ai/zai-glm-cli#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.7.0",
    "cfonts": "^3.3.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "diff": "^8.0.2",
    "dotenv": "^16.4.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.2.0",
    "gradient-string": "^3.0.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "openai": "^5.10.1",
    "react": "^18.3.1",
    "ripgrep-node": "^1.0.0",
    "tiktoken": "^1.0.21",
    "typescript": "^5.3.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/diff": "^7.0.2",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^24.9.0",
    "@types/react": "^18.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "tsx": "^4.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true
}
